<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>

    <title>homepage</title>
</head>
<body>
<%- include('partials/nav') %>

<div class="container mt-5">
    <div class="row mb-4">
        <div class="col-md-8">
         
            <h1 class="display-4 font-weight-bold mb-3"><%= blog.title %></h1><p>created by : <%= blog.createdBy.Fullname %> </p>
        </div>
        
        <div class="col-md-4 text-md-right">
            <img src="<%= blog.coverImageURL %>" alt="Blog Cover Image" class="img-fluid rounded shadow-sm" style="max-height: 250px; object-fit: cover;">
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <p class="lead" style="line-height: 1.8;"><%= blog.body %></p>
        </div>
    </div>
</div>
<div class="container mt-4">
    <div class="d-flex">
     <div class="ms-2">  <img src="<%= blog.createdBy.profilepicture %>" alt="" width="60px"> </div> <div class="ms-3 mt-2"> <h6><%= blog.createdBy.Fullname %></h6>  
    
    </div>
   
</div>

    <form  action="/blog/comment/<%= blog._id %>" method="post">
        <div class="mb-3">      
          <input type="text" name="content" class="form-control">
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
</div>
<h1>Comments (<%= comments.length %>)</h1>
<div class="mt-3 ">
    <% comments.forEach(comment => { %>
        
        <div class="d-flex mt-3">
             
            <div class="col-md-0.8"><img src="<%= comment.createdBy.profilepicture %>" width="50px"></div>
            <div class="col-md-7">
            <div class="d-flex ms-2 " > @<%= comment.createdBy.Fullname %>  <div class=""  style="opacity: 0.5;"> <%= comment.createdBy.createdAt %> </div></div>
              <div class="mt-2 ms-2"><%= comment.content %></div></div>
        </div>
        </div>
      
    <% }) %>
</div>

<%- include('partials/script') %>
</body> 
</html>
